{
    "name": "digikraaft/laravel-review-rating",
    "description": "Review & Rating system for Laravel",
    "keywords": [
        "digikraaft",
        "reviews",
        "ratings",
        "laravel"
    ],
    "homepage": "https://github.com/digikraaft/laravel-review-rating",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Oladoyinbo",
            "email": "hello@digikraaft.ng",
            "homepage": "https://digikraaft.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0",
        "spatie/test-time": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Digikraaft\\ReviewRating\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Digikraaft\\ReviewRating\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Digikraaft\\ReviewRating\\ReviewRatingServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
